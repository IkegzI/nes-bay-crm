<h1>Изменение сведений о <%= @region.name %></h1>

<%= form_for :region, url:  edit_region_path(@region), class: 'form' do |f| %>
	
	<div>
  <p>
    <%= f.label 'Имя региона' %>
    <%= f.text_field :name, value: @region.name, class: 'editor text_field', id: :name %>
  </p>
 </div>
  
  <%= f.submit 'Изменить', class: 'button' %>
<% end %>