<%= form_for :company, url: edit_company_path(@company) do |f| %>
  <div class="data">
    <div class="info item">
      <h3>Инструмент</h3>
      <% @company.instruments.each do |instrument| %>
        <p class="print">
          <%= (link_to instrument.name, "/additionalinfo/instrument/#{instrument.id}") %>
        </p>
      <% end %>
    </div>

    <div class="info item" id="#item">
      <h3>Изменение сведений компании <br> <%= @company.name %></h3>
      <p>
        <%= f.label 'Имя компании' %>
        <%= f.text_field :name, value: @company.name, class: 'editor text_field', id: :name %>
      </p>

      <p>
        <%= f.label 'Телефон' %>
        <%= f.text_field :phone, value: @company.phone, class: 'editor text_field', id: :phone %>
      </p>

      <p>
        <%= f.label 'Адрес' %>
        <%= f.text_field :address, value: @company.address, class: 'editor text_field', id: :address %>
      </p>
      <p>
        <%= f.label 'Менеджер', class: 'label_field' %>
        <%= select_tag 'company[user_id]', options_for_select(user_name_id), value: @company.user.id, class: 'edit select', id: :user_id %>
      </p>

      <%= f.submit 'Изменить', class: 'button' %>
    </div>


    <div class="info item">
      <h3>Сервис</h3>
      <% @company.services.each do |service| %>
        <p>
          <%= (link_to service.name, "/additionalinfo/service/#{service.id}") %>
        </p>
      <% end %>
    </div>

    <div class="info item">
      <h3>Сферы деятельности</h3>
      <% @company.sphereworks.each do |spherework| %>
        <p class="print">
          <%= (link_to spherework.name, "/additionalinfo/spherework/#{spherework.id}") %>
        </p>
      <% end %>
    </div>

    <div class="info item">
      <h3>
        Менеджер
      </h3>
      <p class="print">
        <%= link_to @company.user.name, user_path(@company.user) %>
      </p>
    </div>
  </div>
<% end %>
