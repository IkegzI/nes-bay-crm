<h1>Список компаний</h1>
<p>
  <% @company.each_with_index do |item, index| %>
    <div class="company" id="<%= index %>">
      <h4 class="<%= "#{item.class.to_s.downcase} #{item.attribute_names[1]}" %>"><%= item.name %></h4>
      <span class="<%= "#{item.class.to_s.downcase} #{item.attribute_names[2]}" %>"><%= item.address %></span>
      <span class="<%= "#{item.class.to_s.downcase} #{item.attribute_names[3]}" %>"><%= item.phone %></span>
    <p>
      <%= link_to 'Подробнее', company_path(item), class: "link item" %>
      <%= link_to 'Изменить', edit_company_path(item), class: "link item" %>
      <%= link_to 'Удалить', company_path(item), method: 'DELETE', class: "link item" %>
    </p>
    </div>
  <% end %>
  </p>