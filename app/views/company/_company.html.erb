<% @company.each_with_index do |item, index| %>
  <div class="info item" id="<%= item.id %>">
    <h3 class="<%= "#{item.class.to_s.downcase} #{item.attribute_names[1]}" %>"><%= "#{item.name[0..2]} #{item.region_id}" %></h3>
    <p class="<%= "#{item.class.to_s.downcase} #{item.attribute_names[1]}" %>"><%= item.name %></p>
    <span class="<%= "#{item.class.to_s.downcase} #{item.attribute_names[2]}" %>"><%= item.address %></span>
    <span class="<%= "#{item.class.to_s.downcase} #{item.attribute_names[3]}" %>"><%= item.phone %></span>
    <span class="<%= "#{item.class.to_s.downcase} #{item.attribute_names[4]}" %>"><%= item.region.name || '' %></span>
    <span><%= hidden_field_tag('talk[user_id]', current_user, class: 'new select', id: :user) %></span>
    <div class="link action">
      <%= link_to 'Подробнее', company_path(item.id), class: "link item" %>
      <%= link_to 'Изменить', edit_company_path(item.id), class: "link item" %>
      <%= link_to 'Удалить', company_path(item.id), method: 'DELETE', class: "link item" %>
    </div>
  </div>
<% end %>
