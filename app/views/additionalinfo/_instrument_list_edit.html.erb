<h3>Инструмент</h3>
<% @company.instruments.each do |instrument| %>
  <%= form_for :link, remote: true, url: 'del/link', method: :delete, class: 'new form' do |f| %>
    <p class="print">
      <%= (link_to instrument.name, "/additionalinfo/instrument/#{instrument.id}") %>
      <%= hidden_field_tag 'link[what]', "Instrument" %>
      <%= hidden_field_tag 'link[id]', instrument.id %>
      <%= f.submit 'убрать', class: 'new button link_destroy' %>
    </p>
  <% end %>
<% end %>
<div>
  <% unless instruments_name_id_with_filter(@company) == [] %>
    <%= form_for :link, remote: true, url: 'add/link', class: 'new form' do |f| %>
      <%= select_tag('link[id]', options_for_select(instruments_name_id_with_filter(@company)), class: 'new select', id: :status) %>
      <%= hidden_field_tag 'link[what]', "Instrument" %>
      <%= f.submit 'Добавить', class: 'new button link_destroy' %>
    <% end %>
  <% end %>
</div>